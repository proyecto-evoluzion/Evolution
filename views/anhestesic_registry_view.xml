      					<group name="induction_main" string="Inducción">
      						<group name="induction_sub1">
      							<field name="intravenous"  attrs="{'readonly':[('state','=','closed')]}"/>
      							<field name="inhalation"   attrs="{'readonly':[('state','=','closed')]}"/>
