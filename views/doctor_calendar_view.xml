         				<field name='procedure_end_date' required="1" attrs="{'readonly':[('state','!=','new')]}"/>
         			</group>
         			<group name="main_sub_group2" >
         				<field name='document_type' attrs="{'readonly':[('state','!=','new')]}"/>
